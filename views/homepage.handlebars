<ol class="topic-list">
  {{#each topic}}
  <li>
    <article class="topic">
      <div class="title">
        <a href="{{post_url}}" target="_blank">{{title}}</a>
        <span>({{topic_url}})</span>
      </div>
      <div class="meta">
        <a href="/topic/{{id}}">{{message.length}} messages(s)</a>
      </div>
    </article>
  </li>
  {{/each}}
</ol>