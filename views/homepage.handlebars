<ol class="topic-list">
  {{#each topic}}
  <li>
    <article class="topic">
      <div class="title">
        <a href="{{post_url}}" target="_blank">{{title}}</a>
        <span>({{topic_url}})</span>
      </div>
      <div class="meta">
        {{!-- {{vote_count}} point(s) by {{user.username}} on
        {{created_at}} --}}
        |
        <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
      </div>
    </article>
  </li>
  {{/each}}
</ol>